
@model MyApp.Models.ViewModels.ConsultaViewModel
@using CaptchaMvc.HtmlHelpers;

<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 hidden-xs">
    <div class="box box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">Publicaciones</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active left">
                        <img src="~/Public/dist/img/photo1.png" alt="First slide">

                        <div class="carousel-caption">
                            Avenida las cazonas
                        </div>
                    </div>
                    <div class="item next left">
                        <img src="~/Public/dist/img/photo2.png" alt="Second slide">
                        <div class="carousel-caption">
                            Comedor principal
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Public/dist/img/photo3.jpg" alt="Third slide">

                        <div class="carousel-caption">
                            Escritora Maria del Pilar Antunez
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="fa fa-angle-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="fa fa-angle-right"></span>
                </a>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>
<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="box box-solid box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Consulte aquì su Tramite</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            @if (TempData["msg"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="fa fa-ban"></i><strong> Error!</strong> @TempData["msg"]
                </div>
            }
            @*<div class="text-center">
                Antes de ingresar los datos, te recomendamos que revises los pasos
                que debes seguir.
                <a href="#" target="_blank">Ver Video</a>
            </div>*@
            @using (Html.BeginForm("Info", "Consultas", FormMethod.Post, new { role = "form", @id = "FrmConsulta" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(d => d.NroExpediente)
                            <div class="input-group col-lg-6">
                                <span class="input-group-addon"><i class="fa fa-qrcode"></i></span>
                                @Html.TextBoxFor(d => d.NroExpediente, new { @class = "form-control", @placeholder = "N° Expediente" })

                            </div>
                            @Html.ValidationMessageFor(d => d.NroExpediente, "", new { @class = "label label-danger"})

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(d => d.ClaveWeb)
                            <div class="input-group col-lg-6">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                @Html.TextBoxFor(d => d.ClaveWeb, new { @class = "form-control", @placeholder = "Clave Web" })
                            </div>
                            @Html.ValidationMessageFor(d => d.ClaveWeb, "", new { @class = "label label-danger" })

                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @*<label>Captcha</label>*@
                        <div class="col-md-offset-4">
                            @Html.Captcha("Refrescar", "Intruduzca los caracteres de la imagen", 5, "Captcha requerido", true)

                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <br />
                        <div class="text-center">
                            <button type="submit" id="btnConsulta" name="btnConsulta" class="btn btn-success"><i class="fa fa-search"></i> Consultar</button>
                        </div>
                    </div>
                </div>

            }
            <br />
            <div class="ayuda_login">
                <a href="#" style="color:red;">¿Dónde esta mi Clave Web?</a>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>

@section scripts{
    <script>

    </script>


}
